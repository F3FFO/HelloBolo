<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.ListPreference
        android:defaultValue="auto"
        android:entries="@array/theme_entries"
        android:entryValues="@array/theme_values"
        android:key="@string/preference_key_theme"
        android:summary="@string/preference_summary_theme_29"
        android:title="@string/preference_title_theme" />

    <Preference
        android:key="@string/preference_key_gps"
        android:summary="@string/preference_summary_gps"
        android:title="@string/preference_title_gps" />

    <androidx.preference.ListPreference
        android:defaultValue="it"
        android:entries="@array/language_entries"
        android:entryValues="@array/language_values"
        android:key="@string/preference_key_language"
        android:summary="@string/preference_summary_language"
        android:title="@string/preference_title_language" />

    <Preference
        android:key="@string/preference_key_open_log"
        android:title="@string/preference_title_open_log" />

    <Preference
        android:key="@string/preference_key_delete_log"
        android:title="@string/preference_title_delete_log" />

    <Preference
        android:key="@string/preference_key_clear_memory"
        android:title="@string/preference_title_clear_memory" />
</androidx.preference.PreferenceScreen>