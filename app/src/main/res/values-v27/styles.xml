<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light/Day Mode theme -->
    <style name="LightTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDay</item>
        <item name="colorAccent">@color/colorAccentDay</item>
        <item name="colorSecondary">@color/colorPrimaryDay</item>
        <item name="colorError">@color/colorErrorDay</item>
        <item name="android:textColor">@color/colorTextDay</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDay</item>
        <item name="android:statusBarColor">@color/colorPrimaryDay</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- Dark/Night Mode theme -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="colorSecondary">@color/colorSecondaryNight</item>
        <item name="colorError">@color/colorErrorNight</item>
        <item name="android:textColor">@color/colorTextNight</item>
        <item name="android:navigationBarColor">@color/colorSecondaryNight</item>
        <item name="android:statusBarColor">@color/colorPrimaryNight</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

