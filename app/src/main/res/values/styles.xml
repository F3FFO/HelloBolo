<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorControlNormal">@color/colorIcon</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_theme</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="MaterialSearchBar" parent="MaterialSearchBarLight">
        <item name="mt_searchBarColor">?attr/colorPrimaryDark</item>
        <item name="mt_searchIconTint">?attr/colorControlNormal</item>
        <item name="mt_clearIconTint">?attr/colorControlNormal</item>
        <item name="mt_extraIconTint">?attr/colorControlNormal</item>
        <item name="mt_backIconTint">?attr/colorControlNormal</item>
        <item name="mt_textCursorTint">?attr/colorAccent</item>
        <item name="mt_textColor">?android:attr/textColor</item>
        <item name="mt_hintColor">@color/colorGrey</item>
        <item name="mt_highlightedTextColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance_MaterialComponents_Body1_Custom" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="TextAppearance_MaterialComponents_Headline6_Custom" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="DialogFullScreenTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="buttonBarPositiveButtonStyle">@style/Dialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Dialog.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Dialog.Button.Neutral</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Dialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Dialog.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Dialog.Button.Neutral</item>
    </style>

    <style name="Dialog.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">?android:attr/textColor</item>
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="Dialog.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">?android:attr/textColor</item>
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="TimePickerTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="buttonBarPositiveButtonStyle">@style/TimePicker.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/TimePicker.Button.Neutral</item>
    </style>

    <style name="TimePicker.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">?attr/colorAccent</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TimePicker.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">?android:attr/textColor</item>
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

</resources>